<% action = cat.persisted? ? cat_url(cat) : cats_url %>
<% form_method = cat.persisted? ? "PUT" : "POST" %>
<% button_value = cat.persisted? ? "Update cat" : "Build a cat!" %>

<form action="<%= action %>" method="POST">
  <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %>>
  
  <input type="hidden" name="_method" value="<%= form_method %>">
  <label for="cat_name">Cat's name</label>
  <input name="cat[name]" id="cat_name" type="text" value="<%= cat.name%>">
  <br>
  <label for="cat_age">Cat's age</label>
  <input name="cat[age]" id="cat_age" type="number" value="<%= cat.age %>">
  <br>
  <div>
    <label>Cat's sex</label>
    <input name="cat[sex]" id="cat_sex_m" type="radio" value="M" <%= "checked" if cat.sex == "M" %>>
    <label for="cat_sex_m">Male</label>
    <input name="cat[sex]" id="cat_sex_f" type="radio" value="F" <%= "checked" if cat.sex == "F" %> >
    <label for="cat_sex_f">Female</label>
  </div>
  <label for="cat_birth_date">Cat's birthday</label>
  <input name="cat[birth_date]" id="cat_birth_date" type="date" 
  value= <%= cat.birth_date %>>
  <br>
  <label for="cat_color">Cat's color</label>
  <select name="cat[color]" id="cat_color">
    <option value="red" <%= "selected" if cat.color == "red" %>>
      Red
    </option>
    <option value="orange" <%= "selected" if cat.color == "orange" %>>
      Orange
    </option>
    <option value="brown" <%= "selected" if cat.color == "brown" %>>
      Brown
    </option>
    <option value="black" <%= "selected" if cat.color == "black" %>>
      Black
    </option>
    <option value="calico" <%= "selected" if cat.color == "calico" %>>
      Calico
    </option>
  </select>
  <br>
  <label for="cat_description">Describe your cat</label>
  <textarea name="cat[description]" id="cat_description" ><%= cat.description %></textarea>
  <br>
  <input type="submit" value="<%= button_value %>">
</form>