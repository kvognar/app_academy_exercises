<% button_text = action == users_url ? "Sign up!" : "Log in" %>

<form action="<%= action %>" method="POST">

  <%= authentication_token %>
  
  <label for="user_username">
    Username
  </label>
  <input 
    type="text" 
    name="user[username]" 
    id="user_username" 
    value="<%= user.username %>"
  >
  
  <label for="user_password">
    Password
  </label>
  <input
    type="password"
    name="user[password]"
    id="user_password"
  >
  
  <input type="submit" value="<%= button_text %>">
</form>