<h1>Rent a cat!</h1>

<form action="<%= cat_rental_requests_url %>" method="POST">

  <label for="select_cat">Pick your cat!</label>
  <select name="cat_rental_request[cat_id]" id="select_cat">
    <% Cat.all.each do |cat| %>
    <option value= <%= cat.id %>
      <%= "selected" if @request.cat == cat %> >
      <%= cat.name %>
    </option>
    <% end %>
  </select>
  <br>
  
  <label for="rental_start_date">Start date</label>
  <input name="cat_rental_request[start_date]" id="rental_start_date" type="date" 
  value= <%= @request.start_date %>>
  <br>
  
  <label for="rental_end_date">End date</label>
  <input name="cat_rental_request[end_date]" id="rental_end_date" type="date" 
  value= <%= @request.end_date %>>
  <br>
  
  <input type="submit" value="Rent now!">
  <br>
  <%= link_to "Cats index", cats_url %>

</form>