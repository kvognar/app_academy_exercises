<h1><%= @band.name %></h1>
<%= link_to "Edit", edit_band_url(@band) %>

<h3>Albums</h3>
<ul>
  <% @band.albums.each do |album| %> 
    <li><%= link_to album.title, album_url(album) %></li>
  <% end %>
</ul>

<%= link_to "Add album", new_band_album_url(@band) %>
<%= button_to "Delete band", band_url(@band),
   method: :delete, data: { confirm: "Are you sure?" } %>
