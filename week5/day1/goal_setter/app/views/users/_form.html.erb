<% action_path = (button_text == "Sign Up" ? users_url : session_url) %>


<form action="<%= action_path %>" method="post">
  <input 
    type="hidden" 
    name="authenticity_token" 
    value="<%= form_authenticity_token %>" >
    
  <label>Username
    <input 
      type="text" 
      name="user[username]"
      value="<%= user.username %>">
  </label>
  <br>
  <label>Password
    <input
      type="password"
      name="user[password]">
  </label>
  
  <input type="submit" value="<%= button_text %>">
</form>
    